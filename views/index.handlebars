<div class = "container">

<div class="span text-center">
    <h1><strong>Burgers!</strong></h1>
  </div>
</div>

<div class = "row">

 <div class="col-sm-6 text-center">
<h2>Burgers that I have not eaten!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
 <div class="col-sm-6 text-center">
<h2>Burgers that I have eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

</div>